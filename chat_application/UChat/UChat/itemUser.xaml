<UserControl x:Name="itemUser_" x:Class="UChat.itemUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UChat"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Foreground="{x:Null}">
    <ListViewItem x:Name="listView" Background="{x:Null}" Foreground="Red" FontFamily="Verdana" FontSize="12" FontWeight="Bold" Focusable="False" Cursor="Hand" BorderBrush="{x:Null}">
        <StackPanel Orientation="Horizontal" Width="190" IsEnabled="False">
            <Image x:Name="img_user" Height="48" Width="50" IsEnabled="False"></Image>
            <TextBlock x:Name="txt_name" Text="Coffie" Width="140"/>
        </StackPanel>
    </ListViewItem>
</UserControl>
